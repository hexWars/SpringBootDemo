<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.sehnsucht.emp.mapper.EmpMapper">
    <select id="getEmpList" resultType="top.sehnsucht.emp.entity.Emp" parameterType="top.sehnsucht.emp.vo.EmpQuery">
        select * from emp
        <include refid="getEmpListWhere"></include>
        limit #{start},#{limit}
    </select>
    <select id="countEmpList" resultType="long" parameterType="top.sehnsucht.emp.vo.EmpQuery">
        select count(1) from emp
        <include refid="getEmpListWhere"></include>
    </select>

    <sql id="getEmpListWhere">
        <where>
            <if test="name != null">
                name like '%' #{name} '%'
            </if>
            <if test="startDate != null">
                <![CDATA[
                    birthday >= #{startDate}
                ]]>
            </if>
            <if test="endDate != null">
                <![CDATA[
                    birthday <= #{startDate}
                ]]>
            </if>
        </where>
    </sql>

</mapper>